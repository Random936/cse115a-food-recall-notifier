<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Food_Recall_Notif.View.FoodDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Food_Recall_Notif.Model"
    xmlns:viewmodel="clr-namespace:Food_Recall_Notif.ViewModel"
    Title="{Binding Upc_item.upc}"
    x:DataType="viewmodel:FoodDetailsViewModel">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            <BoxView
                BackgroundColor="{StaticResource Primary}"
                Grid.RowSpan="2"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"/>

            <Border StrokeShape="RoundRectangle 80"
                    Stroke="White"
                    StrokeThickness="6"
                    HeightRequest="172"
                    WidthRequest="172"
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
            </Border>

            <Label Style="{StaticResource LargeLabel}"
                   Grid.Row="1"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="{Binding Upc_item.upc}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,8"/>

            <VerticalStackLayout Grid.Row="2"
                                 Padding="10"
                                 Spacing="10">
                <Label Style="{StaticResource MediumLabel}"
                       Text="{Binding Upc_item.date}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Upc_item.page, StringFormat='Page: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Upc_item.recall_reason, StringFormat='Reason: {0}'}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>