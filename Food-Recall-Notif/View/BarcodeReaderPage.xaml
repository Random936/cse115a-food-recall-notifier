<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Food_Recall_Notif.View.BarcodeReaderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    xmlns:model="clr-namespace:Food_Recall_Notif.Model"
    xmlns:viewmodel="clr-namespace:Food_Recall_Notif.ViewModel"
    x:DataType="viewmodel:FoodViewModel"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls">

    <Grid>
        <!-- CameraBarcodeReaderView -->
        <zxing:CameraBarcodeReaderView
            x:Name="barcodeReader"
            BarcodesDetected="BarcodeReader_BarcodesDetected"
            IsDetecting="True"
            CameraLocation="Rear"/>
        <StackLayout VerticalOptions="End"
                     Padding="10">
            <Label Text="Point the back camera at the barcode."
                   HorizontalOptions="Center"
                   FontSize="16"
                   TextColor="White"/>
            <CollectionView ItemsSource="{Binding BarcodeResults}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Food_Item">
                        <Grid Padding="10">
                            <Border HeightRequest="125"
                                    Style="{StaticResource CardView}">
                                <Grid Padding="0"
                                      ColumnDefinitions="125,*">
                                    <VerticalStackLayout
                                        VerticalOptions="Center"
                                        Grid.Column="1"
                                        Padding="10">
                                        <Label Style="{StaticResource LargeLabel}"
                                               Text="{Binding brand}"/>
                                        <Label Style="{StaticResource MediumLabel}"
                                               Text="{Binding date}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <StackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center">
                            <Label Text="No results matched your search."
                                   Margin="10,25,10,10"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>

    </Grid>
</ContentPage>