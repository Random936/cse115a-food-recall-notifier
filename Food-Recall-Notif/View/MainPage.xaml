<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food_Recall_Notif.View.MainPage"
             BackgroundColor="{StaticResource Background}"
             xmlns:model="clr-namespace:Food_Recall_Notif.Model"
             xmlns:viewmodel="clr-namespace:Food_Recall_Notif.ViewModel"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True">

    <Grid
        ColumnDefinitions="*,*,*"
        ColumnSpacing="5"
        RowDefinitions="1*, 1*, 10*">
        <SearchBar Grid.Row="0"
                   Grid.ColumnSpan="3"
                   x:Name="searchBar"
                   x:DataType="viewmodel:FoodViewModel"
                   Placeholder="Enter food item"
                   SearchCommand="{Binding PerformSearchCommand}"
                   SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                   TextColor="white"/>
        <Button Grid.Row="1"
                Grid.Column="0"
                Text="📷"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="Button_CameraButtonClicked">
        </Button>
        <Button Grid.Row="1"
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Upload Image"/>
        <Picker Grid.Row="1"
                Grid.Column="2"
                x:Name="sortPicker"
                Title="Sort By"
                SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Brand (A-Z)</x:String>
                    <x:String>Brand (Z-A)</x:String>
                    <x:String>Newest First</x:String>
                    <x:String>Oldest First</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <CollectionView
            x:DataType="viewmodel:FoodViewModel"
            Grid.Row="2"
            Grid.ColumnSpan="4"
            x:Name="SearchCollectionView"
            ItemsSource="{Binding SearchResults}"
            SelectionMode="None"
            IsVisible="{Binding IsSearchListVisible}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Food_Item">
                    <Grid Padding="10">
                        <Border HeightRequest="125"
                                Style="{StaticResource CardView}">
                            <Grid Padding="0"
                                  ColumnDefinitions="125,*">
                                <VerticalStackLayout
                                    VerticalOptions="Center"
                                    Grid.Column="1"
                                    Padding="10">
                                    <Label Style="{StaticResource LargeLabel}"
                                           Text="{Binding brand}"/>
                                    <Label Style="{StaticResource MediumLabel}"
                                           Text="{Binding date}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <ContentView>
                    <StackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center">
                        <Label Text="No results matched your search."
                               Margin="10,25,10,10"
                               FontAttributes="Bold"
                               FontSize="18"
                               HorizontalOptions="Fill"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </ContentView>
            </CollectionView.EmptyView>
        </CollectionView>
        <RefreshView Grid.Row="2"
                     Grid.ColumnSpan="3"
                     Command="{Binding GetFoodCommand}"
                     IsRefreshing="{Binding IsRefreshing}"
                     x:DataType="viewmodel:FoodViewModel">
            <CollectionView
                x:Name="DefaultCollectionView"
                ItemsSource="{Binding DefaultResults}"
                SelectionMode="None"
                IsVisible="{Binding IsDefaultVisible}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Food_Item">
                        <Grid Padding="10">
                            <Border HeightRequest="125"
                                    Style="{StaticResource CardView}">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:FoodViewModel}}, x:DataType=viewmodel:FoodViewModel, Path=GoToDetailsCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                <Grid Padding="0"
                                      ColumnDefinitions="125,*">
                                    <VerticalStackLayout
                                        VerticalOptions="Center"
                                        Grid.Column="1"
                                        Padding="10">
                                        <Label Style="{StaticResource LargeLabel}"
                                               Text="{Binding brand}"/>
                                        <Label Style="{StaticResource MediumLabel}"
                                               Text="{Binding date}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
